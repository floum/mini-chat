<% if current_user %>
  <div class="page-header">
    <h1>Join The Discussion</h1>
  </div>
  <%= render 'form' %>

  <div class="panel panel-default" id="comments">
    <div class="panel-body">
      <ul class="media-list">
        <%= render @comments %>
      </ul>
    </div>
    <div id="infinite-scrolling">
      <%= will_paginate %>
    </div>
  </div>

<% else %>
  <%= render 'welcome' %>
<% end %>

